<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="293dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя героя"
                android:textColor="@color/disableText"
                android:textSize="16dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/viewNameHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="clip_horizontal|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Ловкость"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Сила"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Интеллект"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Харизма"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Стойкость"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editConstitution"
                    android:layout_width="29dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/viewNameHero"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:hint="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:textSize="18sp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editStrenght"
                    android:layout_width="29dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/viewNameHero"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:hint="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:textSize="18sp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editAgility"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/viewNameHero"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:hint="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:textSize="18sp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editIntellegence"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/viewNameHero"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:hint="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:textSize="18sp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editCharisma"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/viewNameHero"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:hint="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:textSize="18sp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="Здоровье"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="Мана"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editHealth"
                        android:layout_width="30dp"
                        android:layout_height="45dp"
                        android:layout_below="@+id/viewNameHero"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:hint="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/editMana"
                        android:layout_width="30dp"
                        android:layout_height="45dp"
                        android:layout_below="@+id/viewNameHero"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:hint="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:selectAllOnFocus="true"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>